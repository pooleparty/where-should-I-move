{
  "name": "node-webapp-starter-kit",
  "version": "1.0.0",
  "engines": {
    "node": ">=8.11.2"
  },
  "description": "Starter kit for node web applications",
  "scripts": {
    "postinstall": "npm rebuild node-sass",
    "start": "node ./bin/server",
    "clean": "run-p -cl clean:client clean:server",
    "clean:client": "rimraf ./bin",
    "clean:server": "rimraf ./public/bundles",
    "lint": "eslint . '**/.*.js' --ext=[.js,.jsx] --cache",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest src/",
    "test:watch": "npm run test -- --watch",
    "test:bin": "jest bin/",
    "prebuild": "npm run clean",
    "build": "run-p -cl build:server build:client",
    "build:client": "BABEL_ENV=client webpack -p --progress --colors --env=dist",
    "build:server": "BABEL_ENV=node babel src/server/ -s -d bin",
    "postbuild:server": "cp -r src/server/views bin/views",
    "dev:server": "BABEL_ENV=node nodemon $NODE_DEBUG_OPTION ./src/server/devServer.js --config nodemon.config.json",
    "dev:server:debug": "NODE_DEBUG_OPTION='--inspect' npm run dev:server",
    "predev:client": "npm run build:server",
    "dev:client": "BABEL_ENV=client webpack --watch",
    "validate": "run-p -c lint test",
    "prepush": "npm run validate",
    "precommit": "lint-staged",
    "formatAll": "prettier-eslint --write \"**/*.{js,jsx}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pooleparty/node-webapp-starter-kit.git"
  },
  "keywords": [
    "node",
    "webapp",
    "react",
    "boilerplate",
    "starter"
  ],
  "author": "pooleparty",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pooleparty/node-webapp-starter-kit/issues"
  },
  "homepage": "https://github.com/pooleparty/node-webapp-starter-kit#readme",
  "dependencies": {
    "body-parser": "^1.18.3",
    "classnames": "^2.2.6",
    "cookie-parser": "^1.4.3",
    "dotenv": "^4.0.0",
    "express": "^4.16.3",
    "express-correlation-id": "^1.2.0",
    "express-winston": "^2.5.1",
    "http-status": "^1.1.2",
    "lodash": "^4.17.10",
    "prop-types": "^15.6.1",
    "pug": "^2.0.3",
    "react": "^16.4.0",
    "react-bootstrap": "^0.31.5",
    "react-dom": "^16.4.0",
    "serve-favicon": "^2.5.0",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-require-ignore": "^0.1.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.26.0",
    "css-loader": "^0.28.11",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.9.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^7.1.3",
    "node-sass": "^4.9.0",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.3",
    "postcss-loader": "^2.1.5",
    "prettier-eslint-cli": "^4.7.1",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.19.1",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^17.0.0",
    "webpack": "^3.12.0",
    "webpack-merge": "^4.1.2"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier-eslint --write",
      "git add"
    ]
  }
}
